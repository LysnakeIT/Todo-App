<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/task_design">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/intitule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingLeft="25dp"
            android:text="IntitulÃ©"
            android:textColor="@color/black"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/intitule"
            android:layout_marginTop="10dp"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:text="Description"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/labeldate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/description"
            android:layout_marginLeft="195dp"
            android:layout_marginTop="10dp"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:text="date:"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/description"
            android:layout_marginLeft="230dp"
            android:layout_marginTop="10dp"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:text="date"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/labelduree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/description"
            android:layout_marginTop="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="25dp"
            android:text="duree:"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/duree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/description"
            android:layout_marginTop="10dp"
            android:paddingLeft="65dp"
            android:paddingRight="25dp"
            android:text="Duree"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/url"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/date"
            android:layout_marginBottom="5dp"
            android:paddingLeft="20dp"
            android:paddingRight="25dp"
            android:text="Url"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/labelcontext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="190dp"
            android:layout_marginTop="5dp"
            android:paddingLeft="23dp"
            android:paddingRight="25dp"
            android:text="Contexte:"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/context"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="277dp"
            android:layout_marginTop="5dp"
            android:paddingRight="25dp"
            android:text="Context"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/goButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/context"
            android:background="#f5f5f5"
            android:text="Go"
            android:textColor="#555"
            android:visibility="invisible" />

    </RelativeLayout>

</LinearLayout>